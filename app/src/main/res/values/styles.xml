<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@color/colorBackgroundPrimary</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="baseTextViewRecyclerViewTypeOfVehicleAvailable" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:layout_marginRight">0dp</item>

    </style>

    <style name="textViewTypeOfVehicleAvailable" parent="baseTextViewRecyclerViewTypeOfVehicleAvailable">
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="textViewEmpty" parent="baseTextViewRecyclerViewTypeOfVehicleAvailable">
        <item name="android:layout_height">10dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="buttonStyleBase" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:gravity">center</item>
        <item name="background">@color/colorBackgroundSecondary</item>
<!--        <item name="android:fontFamily">@font/quantico_bold</item>-->
        <item name="android:textSize">14sp</item>
    </style>

    <style name="buttonConfigVehicleParams" parent="buttonStyleBase">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">100dp</item>
    </style>

    <style name="buttonAddVehicle" parent="buttonStyleBase">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="buttonConfigTrackLength" parent="buttonStyleBase">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="buttonStartRace" parent="buttonStyleBase">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

</resources>